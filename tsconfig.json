{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "resolveJsonModule": false,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es2021.weakref"
    ]
  },
  "include": ["./src/**/*"]
}
