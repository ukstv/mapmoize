{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "Node16",
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "lib": ["es2021.weakref"],
    "inlineSourceMap": true
  },
  "include": ["./src/**/*"]
}
